<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.express.mapper.UserMapper">
<insert id="addUser" parameterType="User">
insert into user(email,password,name,type,sex) values(#{user.email},#{user.password},#{user.name},#{user.type},#{user.sex})
</insert>

<select id="selectUserById" parameterType="Integer" resultType="User">
select * from user where id=#{value}
</select>

<select id="selectFriendsById" parameterType="Integer" resultType="User">
select * from user where id in(select f_id from friend where s_id=#{value})
</select>

<select id="login" parameterType="LoginForm" resultType="User">
select * from user 
<where>
email=#{email} and password=#{password}
</where>
</select>

<select id="getSimilarEmail" parameterType="String" resultType="String">
select email from user
<where>
email like '${value}%'
</where>

</select>
</mapper>